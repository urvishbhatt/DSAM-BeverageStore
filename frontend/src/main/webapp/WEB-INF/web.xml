<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		 xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
		 version="3.0">

	<display-name>BeverageStoreUI</display-name>

	<!-- Servlets -->

	<!-- JSPs -->
	<servlet>
		<servlet-name>Main</servlet-name>
		<jsp-file>main.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
		<servlet-name>Main</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>

	<!-- JSPs -->
	<servlet>
		<servlet-name>createBeverage</servlet-name>
		<jsp-file>createBeverage.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
		<servlet-name>createBeverage</servlet-name>
		<url-pattern>/createBeverage</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>beverageManager</servlet-name>
		<jsp-file>manageBeverage.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
		<servlet-name>beverageManager</servlet-name>
		<url-pattern>/beverageManager</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>Edit</servlet-name>
		<servlet-class>de.uniba.dsg.dsam.client.EditBeverageServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Edit</servlet-name>
		<url-pattern>/frontend/editBeverage</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>Assign</servlet-name>
		<servlet-class>de.uniba.dsg.dsam.client.AssignIncentiveServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Assign</servlet-name>
		<url-pattern>/frontend/AssignIncentive</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>createIncentive</servlet-name>
		<jsp-file>createIncentive.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
		<servlet-name>createIncentive</servlet-name>
		<url-pattern>/createIncentive</url-pattern>
	</servlet-mapping>


	<servlet>
		<servlet-name>viewOrder</servlet-name>
		<jsp-file>viewOrder.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
		<servlet-name>viewOrder</servlet-name>
		<url-pattern>/viewOrder</url-pattern>
	</servlet-mapping>

</web-app>